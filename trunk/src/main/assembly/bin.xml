<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>system</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <includes>
                <include>etc/*</include>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
                <include>COPYING*</include>
                <include>CHANGES*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
